<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lukekorth.photo_paper">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>

    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
        android:name="com.lukekorth.photo_paper.WallpaperApplication">

        <meta-data android:name="AA_DB_NAME" android:value="500px.db" />
        <meta-data android:name="AA_DB_VERSION" android:value="5" />
        <meta-data android:name="AA_MODELS"
            android:value="com.lukekorth.photo_paper.models.Photos, com.lukekorth.photo_paper.models.User" />

        <activity
            android:name="com.lukekorth.photo_paper.SettingsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.lukekorth.photo_paper.SearchActivity" android:label="@string/search" />
        <activity android:name="com.lukekorth.photo_paper.RecentPhotosActivity" android:label="@string/recent_photos" />
        <activity android:name="com.lukekorth.photo_paper.ViewPhotoActivity" android:theme="@style/FullScreenPhotoTheme" />

        <service android:name="com.lukekorth.photo_paper.services.UserInfoIntentService" />
        <service android:name="com.lukekorth.photo_paper.services.WallpaperService" />
        <service android:name="com.lukekorth.photo_paper.services.ClearCacheIntentService" />

        <service
            android:name="com.lukekorth.photo_paper.sync.AuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <service
            android:name="com.lukekorth.photo_paper.sync.SyncService"
            android:exported="true"
            android:process=":sync">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>

        <receiver android:name="com.lukekorth.photo_paper.receivers.UserPresentReceiver">
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <provider
            android:name="com.lukekorth.photo_paper.sync.StubProvider"
            android:authorities="com.lukekorth.photo_paper.sync.provider"
            android:exported="false"
            android:syncable="true"/>

    </application>

</manifest>
